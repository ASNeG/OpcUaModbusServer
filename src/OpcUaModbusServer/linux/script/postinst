echo "POSTINST RUN"

if [ -x /sbin/start ] && [ -e "/etc/init/OpcUaModbusServer.conf" ]; then
    # use upstart
    echo "INFO: starting daemon by upstart"
    /sbin/start OpcUaModbusServer
elif [ -x /usr/bin/systemctl ] && [ -e "/usr/lib/systemd/system/OpcUaModbusServer.service" ]; then
    # use systemd
    echo "INFO: starting daemon by systemd"
    /usr/bin/systemctl enable OpcUaModbusServer.service
    /usr/bin/systemctl start OpcUaModbusServer.service
else
    # use SYSV init script
    echo "INFO: starting SYSV init script"
    if [ -x "/etc/init.d/OpcUaModbusServer" ]; then
        update-rc.d OpcUaModbusServer defaults >/dev/null
        invoke-rc.d OpcUaModbusServer start || exit $?
    fi
fi

/sbin/ldconfig

echo "POSTINST RETURN"
exit 0
